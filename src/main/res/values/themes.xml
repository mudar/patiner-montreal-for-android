<resources>

    <style name="PatinoiresBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionBarStyle">@style/PatinoiresActionBar</item>
        <item name="logo">@drawable/ic_logo_patinoires</item>
        <item name="actionBarWidgetTheme">@style/PatinoiresActionBarWidget</item>
    </style>

    <style name="MapBaseTheme" parent="@style/PatinoiresTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="PreferencesBaseTheme" parent="@android:style/Theme"></style>


    <style name="PatinoiresTheme" parent="@style/PatinoiresBaseTheme">
        <item name="android:windowBackground">@drawable/background_portrait</item>
        <item name="selectableItemBackground">@drawable/actionbar_btn_selectable</item>
        <item name="android:textColor">@color/dashboard_text</item>
    </style>

    <style name="Theme.Dashboard" parent="@style/PatinoiresTheme">
        <item name="selectableItemBackground">@android:color/transparent</item>
    </style>

    <style name="TabsPagerTheme" parent="@style/PatinoiresTheme"></style>

    <style name="AboutTheme" parent="@style/PatinoiresTheme">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textColorLink">@color/hyperlink</item>
    </style>

    <style name="EulaTheme" parent="@style/PatinoiresTheme"></style>

    <style name="DetailsTheme" parent="@style/PatinoiresTheme"></style>

    <style name="MapTheme" parent="@style/MapBaseTheme"></style>

    <style name="PreferencesTheme" parent="@style/PreferencesBaseTheme"></style>

</resources>