<resources>

    <style name="PatinoiresActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/background_actionbar</item>
        <item name="backgroundSplit">@drawable/background_actionbar</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="logo">@drawable/ic_logo_patinoires</item>
    </style>

    <style name="PatinoiresActionBarWidget" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Eula -->
    <style name="EulaButton" parent="@style/ButtonAppTheme">
    </style>

    <!--Playservices-->
    <style name="PlayservicesTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">@dimen/paddingLarge</item>
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>


    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:drawablePadding">@dimen/paddingSmall</item> -->
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textColor">@color/dashboard_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AboutBox">
        <item name="android:background">@drawable/about_background</item>
        <item name="android:paddingLeft">@dimen/boxPaddingH</item>
        <item name="android:paddingRight">@dimen/boxPaddingH</item>
        <item name="android:paddingTop">@dimen/boxPaddingV</item>
        <item name="android:paddingBottom">@dimen/boxPaddingV</item>
        <!-- <item name="android:background">@drawable/about_separator_background</item> -->
    </style>

    <style name="ListItem">
        <item name="android:cacheColorHint">#660000</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">@dimen/paddingMedium</item>
        <item name="android:paddingRight">@dimen/paddingMedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="ListItemSummary" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="ListItemDistance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="RinkDetailsTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="RinkDetailsCondition" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/paddingMedium</item>
        <item name="android:paddingBottom">@dimen/paddingMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrefsCategory" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@drawable/ab_transparent_patinoires</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/prefs_category_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_prefs_category</item>
        <item name="android:paddingLeft">@dimen/padding_prefs_category</item>
        <item name="android:paddingBottom">@dimen/padding_prefs_category_bottom</item>
    </style>

</resources>