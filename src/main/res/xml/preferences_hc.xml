<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/prefs_category_general">
        <PreferenceScreen
            android:key="prefs_conditions"
            android:summary="@string/prefs_condition_summary"
            android:title="@string/prefs_condition_title">
            <intent android:action="android.intent.action.VIEW"
                android:targetPackage="ca.mudar.patinoires"
                android:targetClass="ca.mudar.patinoires.ui.activity.SettingsNestedActivityHC"/>
        </PreferenceScreen>

        <ListPreference
            android:defaultValue="distance"
            android:dialogTitle="@string/prefs_list_sort_dialog_title"
            android:entries="@array/prefs_list_sort_entries"
            android:entryValues="@array/prefs_list_sort_values"
            android:key="prefs_list_sort_by"
            android:title="@string/prefs_list_sort_title" />
        <ListPreference
            android:defaultValue="iso"
            android:dialogTitle="@string/prefs_units_dialog_title"
            android:entries="@array/prefs_units_entries"
            android:entryValues="@array/prefs_units_values"
            android:key="prefs_units_system"
            android:title="@string/prefs_units_title" />
        <ListPreference
            android:dialogTitle="@string/prefs_language_dialog_title"
            android:entries="@array/prefs_language_entries"
            android:entryValues="@array/prefs_language_values"
            android:key="prefs_language"
            android:title="@string/prefs_language_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_performance">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefs_follow_location_changes"
            android:summary="@string/prefs_follow_location_summary"
            android:title="@string/prefs_follow_location_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_extras">
        <PreferenceScreen
            android:enabled="false"
            android:key="prefs_system_widget_settings"
            android:summary="@string/prefs_system_widget_summary"
            android:title="@string/prefs_system_widget_title" />
    </PreferenceCategory>

</PreferenceScreen>