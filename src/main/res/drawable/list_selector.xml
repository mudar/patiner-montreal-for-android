<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/listview_color_2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/listview_color_1" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/listview_color_3" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/background_1"></solid>
        </shape>
    </item>

</selector>