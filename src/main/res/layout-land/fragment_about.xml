<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bodyPaddingSmall"
        android:paddingLeft="@dimen/root_horizontal_margin"
        android:paddingRight="@dimen/root_horizontal_margin">

        <LinearLayout
            style="@style/AboutBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/bodyPaddingSmall"
                android:text="@string/about_contents_intro_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/bodyPaddingSmall"
                android:text="@string/about_contents_intro_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_contents_slogan" />
        </LinearLayout>

        <RelativeLayout
            style="@style/AboutBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/paddingLarge"
                android:contentDescription="@string/logo_open_data_content_desc"
                android:src="@string/logo_open_data" />

            <TextView
                android:id="@+id/about_contents_credits_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/about_image"
                android:linksClickable="true"
                android:paddingBottom="@dimen/bodyPaddingSmall"
                android:text="@string/about_contents_credits_1" />

            <TextView
                android:id="@+id/about_contents_credits_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_contents_credits_1"
                android:linksClickable="true"
                android:paddingBottom="@dimen/bodyPaddingSmall"
                android:text="@string/about_contents_credits_2" />

            <TextView
                android:id="@+id/about_contents_credits_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_contents_credits_2"
                android:linksClickable="true"
                android:text="@string/about_contents_credits_3" />

            <TextView
                android:id="@+id/about_contents_open_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_contents_credits_3"
                android:linksClickable="true"
                android:text="@string/about_contents_open_data" />
        </RelativeLayout>

        <TextView
            android:id="@+id/about_contents_project_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_contents_project_version" />
    </LinearLayout>

</ScrollView>