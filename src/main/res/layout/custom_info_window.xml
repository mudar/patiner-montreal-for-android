<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:paddingBottom="@dimen/map_info_window_padding"
        android:singleLine="true"
        android:textColor="@color/map_info_window_title"
        android:textSize="@dimen/map_info_window_title_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/map_info_window_snippet"
        android:textSize="@dimen/map_info_window_snippet_text" />

</LinearLayout>