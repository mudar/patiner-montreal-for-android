<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mudar.patinoires"
    android:installLocation="auto"
    android:versionCode="9"
    android:versionName="@string/app_version">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <!-- <supports-screens android:anyDensity="true" /> -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> -->

    <application
        android:name=".PatinoiresApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_manifest"
        android:theme="@style/PatinoiresTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TabsPagerActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/TabsPagerTheme" />
        <activity
            android:name=".ui.RinkDetailsActivity"
            android:label="@string/app_name_details"
            android:launchMode="singleTop"
            android:theme="@style/DetailsTheme"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="fr.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="en.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="m.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="m.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="www.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="www.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MapActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name_map"
            android:launchMode="singleTop"
            android:theme="@style/PatinoiresTheme" >
        </activity>
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/app_name_about"
            android:theme="@style/AboutTheme">
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/app_name_preferences"
            android:theme="@style/PreferencesTheme">
        </activity>
        <activity
            android:name=".ui.SettingsActivityHC"
            android:label="@string/app_name_preferences"
            android:theme="@style/PreferencesTheme">
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <service android:name=".services.SyncService" />
        <service android:name=".services.DistanceUpdateService" />

        <receiver android:name=".receivers.LocationChangedReceiver" />
        <receiver android:name=".receivers.PassiveLocationChangedReceiver" />
        <receiver
            android:name=".receivers.ConnectivityChangedReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.PowerStateChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BATTERY_OKAY" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".providers.RinksProvider"
            android:authorities="ca.mudar.patinoires" />
    </application>

</manifest>