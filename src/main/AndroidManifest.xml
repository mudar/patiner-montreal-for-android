<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mudar.patinoires"
    android:installLocation="auto"
    android:versionCode="10"
    android:versionName="1.1">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <!-- <supports-screens android:anyDensity="true" /> -->

    <permission
        android:name="ca.mudar.patinoires.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="ca.mudar.patinoires.permission.MAPS_RECEIVE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="ca.mudar.patinoires.PatinoiresApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_manifest"
        android:theme="@style/PatinoiresTheme">

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="__GOOGLE_MAPS_V2_API_KEY__" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="ca.mudar.patinoires.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.TabsPagerActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.MainActivity"
            android:theme="@style/TabsPagerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.RinkDetailsActivity"
            android:label="@string/app_name_details"
            android:launchMode="singleTop"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.MainActivity"
            android:theme="@style/DetailsTheme"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="fr.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="en.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="m.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="m.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
                <data
                    android:host="www.patinermontreal.ca"
                    android:pathPrefix="/rinks/"
                    android:scheme="http" />
                <data
                    android:host="www.patinermontreal.ca"
                    android:pathPrefix="/patinoires/"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.MapActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name_map"
            android:launchMode="singleTop"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.MainActivity"
            android:theme="@style/MapTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.AboutActivity"
            android:exported="false"
            android:label="@string/app_name_about"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.MainActivity"
            android:theme="@style/AboutTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.EulaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/app_name_eula"
            android:launchMode="singleTop"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.AboutActivity"
            android:theme="@style/EulaTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.AboutActivity" />
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.SettingsActivity"
            android:exported="false"
            android:label="@string/app_name_preferences"
            android:theme="@style/PreferencesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name="ca.mudar.patinoires.ui.activity.SettingsActivityHC"
            android:exported="false"
            android:label="@string/app_name_preferences"
            android:parentActivityName="ca.mudar.patinoires.ui.activity.MainActivity"
            android:theme="@style/PreferencesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mudar.patinoires.ui.activity.MainActivity" />
        </activity>

        <service android:name="ca.mudar.patinoires.services.SyncService" />
        <service android:name="ca.mudar.patinoires.services.DistanceUpdateService" />

        <receiver android:name="ca.mudar.patinoires.receivers.LocationChangedReceiver" />
        <receiver android:name="ca.mudar.patinoires.receivers.PassiveLocationChangedReceiver" />
        <receiver
            android:name="ca.mudar.patinoires.receivers.ConnectivityChangedReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name="ca.mudar.patinoires.receivers.PowerStateChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BATTERY_OKAY" />
            </intent-filter>
        </receiver>

        <provider
            android:name="ca.mudar.patinoires.providers.RinksProvider"
            android:authorities="ca.mudar.patinoires"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>