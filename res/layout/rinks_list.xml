<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/search_query" android:layout_width="fill_parent"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center_vertical" android:paddingLeft="5dp"
		android:textColor="#BFBFBF" android:background="#404040"
		android:visibility="gone" />

	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:paddingTop="5dp" />


	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal"
		android:text="@string/list_no_rinks" />

</LinearLayout>